<?xml version="1.0" encoding="utf-8"?>   
        <TableLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#E3E3E3"
    android:scrollbars="horizontal|vertical" xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Solicit. N.51849 -->
    <TableRow
        android:id="@+id/tableRow0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/lbEmpresa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cód. Empresa" />

        <EditText
            android:id="@+id/tbEmpresa"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Código da Empresa"
            android:inputType="number" >

           <requestFocus />
           
        </EditText>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Obrigatório)" />

    </TableRow>
    
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/lbcondicao222"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID Vendedor" />

        <EditText
            android:id="@+id/tbId"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Código do Usuário no SIGMA"
            android:inputType="number" >
           
        </EditText>

        <TextView
            android:id="@+id/textView3311"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Obrigatório)" />

    </TableRow>
    
 <TableRow
     android:id="@+id/tableRow2"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/lbVersao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome Vendedor" />

        <EditText
            android:id="@+id/tbNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nome Vendedor(a)"
            android:inputType="text" >
           
        </EditText>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Opcional)" />

    </TableRow>
    
 
  <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Endereço Servidor (Externo)" />

        <EditText
            android:id="@+id/tbIpExterno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Endereço http do Servidor (Iniciar sempre com http://)" >
           
        </EditText>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Opcional)" />

    </TableRow>
    
  
   <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Endereço Servidor (Rede Local)" />

        <EditText
            android:id="@+id/tbIpLocal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Somente para conexão wifi dentro da empresa" >
            
        </EditText>

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Opcional)" />

    </TableRow>
    
   
    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FTP (Host)" />

        <EditText
            android:id="@+id/tbFtp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Endereço do ftp (Se houver)" >
            
        </EditText>

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Opcional)" />

    </TableRow>
    
    
     <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuário (FTP)" />

        <EditText
            android:id="@+id/tbUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Usuário FTP" >
          
        </EditText>

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Opcional)" />

    </TableRow>
    
     
      <TableRow
        android:id="@+id/tableRow7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Senha (FTP)" />

        <EditText
            android:id="@+id/tbPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Senha do FTP"
            android:inputType="textPassword" >
           
        </EditText>

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Opcional)" />

    </TableRow>
    
       <TableRow
        android:id="@+id/tableRow8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pasta recepção Pedidos" />

        <EditText
            android:id="@+id/tbPasta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Pasta padrão para recebimentos dos pedidos offline" >
            
        </EditText>

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Opcional)" />

    </TableRow>
    
       <TableRow
        android:id="@+id/tableRow9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
            <Button
                android:id="@+id/buGravar"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:text="Gravar" />
    </TableRow>   
       
	<TableRow
        android:id="@+id/tableRow10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
            <Button
                android:id="@+id/buSair"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:text="Sair" />

    </TableRow>       

</TableLayout>
