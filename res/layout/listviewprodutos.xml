          android:width="80dip"/>


      <TextView android:id="@+id/total"
          android:text="Total"
          android:layout_height="40px"
          android:layout_width="wrap_content"
          android:width="145dip"
          android:textAppearance="?android:attr/textAppearanceSmall" 
          android:gravity="right"></TextView>
               
